{
  "name": "sysml-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK wrapper with lightweight runtime validation for the SysML v2 API.",
  "license": "LGPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "build": "echo 'TypeScript sources only \u2013 no build step configured.'",
    "test": "vitest run",
    "dev:editor": "vite --config apps/vue-monaco-editor/vite.config.ts",
    "check:versions": "node scripts/validate-versions-lock.mjs",
    "prebuild:editor": "node scripts/validate-versions-lock.mjs --mode=production",
    "build:editor": "vite build --config apps/vue-monaco-editor/vite.config.ts",
    "preview:editor": "vite preview --config apps/vue-monaco-editor/vite.config.ts",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@monaco-editor/loader": "^1.4.0",
    "elkjs": "^0.8.2",
    "monaco-editor": "^0.47.0",
    "vue": "^3.4.37"
  },
  "devDependencies": {
    "@types/node": "^20.16.3",
    "@vitejs/plugin-vue": "^5.0.5",
    "typescript": "^5.5.4",
    "vite": "^5.3.4",
    "vitest": "^1.6.0",
    "@playwright/test": "^1.50.0"
  }
}
