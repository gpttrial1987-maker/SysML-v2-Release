{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "@playwright/test"],
    "lib": ["ES2022", "DOM"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "tests", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
